@model LOLChampions.ViewModels.ChampionViewModel

@{
    ViewBag.Title = "Index";
}

<h2>All Champions</h2>

@{var count = 0;}


<h3>Sort</h3>

Fighter: <input type="checkbox"  title="Fighter" name="Fighter" />
Assassin: <input type="checkbox" title="Assassin"/>
Tank: <input type="checkbox" title="Tank" />
Mage: <input type="checkbox" title="Mage" />


<br/>
<br />

<table>    
    <tr>
        @foreach (var champ in Model.championsList)
        {
            var imageUrl = "../../../Content/Images/champion/" + @champ.image;
            var linkUrl = "/Champion/Details/" + @champ.name;

            
            
                <td style="text-align:center">
                    <a href="@linkUrl">
                        <img src="@imageUrl" />
                    </a>
                    <br />
                    <a href="@linkUrl">@champ.name</a>
                </td>
            
            
            count ++;
            if (count % 10 == 0)
            {
                <tr>
                  
                
               </tr>
            }
            
        }
    </tr>
</table>




